# TestForge AI Backend Configuration

# Application
APP_NAME=TestForge AI
DEBUG=false
ENVIRONMENT=development

# Server
HOST=127.0.0.1
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://testforge:testforge@jluizgomes.local:5432/testforge

# Redis
REDIS_URL=redis://jluizgomes.local:6379

# Security
# Generate a strong key: python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=change-me-in-production-with-a-secure-random-key

# Authentication (set AUTH_ENABLED=true and ADMIN_PASSWORD for production)
AUTH_ENABLED=false
ADMIN_EMAIL=admin@testforge.local
