# CORS (JSON array: Vite dev = localhost:5173; adjust for your frontend origin)
CORS_ORIGINS=["http://localhost:5173","http://jluizgomes.local:5173","http://jluizgomes.local:3000"]

# AI Providers
OPENAI_API_KEY=
OLLAMA_BASE_URL=http://jluizgomes.local:11434
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# Tracing
ENABLE_TRACING=true
JAEGER_ENDPOINT=

# Logging
LOG_LEVEL=INFO
